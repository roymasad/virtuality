PCOPY 0, 2
SCREEN 0, , 2, 2
RANDOMIZE TIMER
COLOR 10
OPEN "README.TXT" FOR INPUT AS #1
REDIM A$(22)
REDIM B$(3000)
LOCATE 23, 1: PRINT SPACE$(80)
FOR T = 1 TO 22
LINE INPUT #1, A$(T)
FOR TT = 1 TO LEN(A$(T))
B$(TT + (T * 80)) = MID$(A$(T), TT, 1)
IF B$(TT + (T * 80)) = "" THEN B$(TT + (T * 80)) = " "
NEXT TT
NEXT T
CLOSE
DO
K$ = INKEY$
IF K$ = CHR$(27) THEN ERASE A$, B$: GOSUB HELL: CLS : SCREEN 0:  SYSTEM
X = INT(RND * 80) + 1
Y = INT(RND * 22) + 1
LOCATE Y, X, 0: PRINT B$(X + (Y * 80))
LOOP
HELL:
FOR T = 1 TO 10000
X = INT(RND * 80) + 1
Y = INT(RND * 22) + 1
LOCATE Y, X, 0: PRINT " "
NEXT T
RETURN

